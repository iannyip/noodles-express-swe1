<html>
  <head>
    <!-- meta tags -->
    <meta charset="utf8">
    <meta name="viewport" content = "width=device-width, initial-scale=1.0">
    <!-- bootstrap & css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="public/styles.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
      <a class="navbar-brand" style="margin-left:40px" href="/">Noodly noodle shop</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav nav">
          <li class="nav-item"><a class="nav-link" href="/">Categories</a></li>
          <li class="nav-item"><a class="nav-link" href="/recipes">Recipes</a></li>
        </ul>
      </div>
    </nav>
    
    <div class="container">
      <div class = 'row'>
        <div class="col-12 justify-content-center">
          <img src="<%= recipe.image %>" alt="recipe image">
        </div>
        <div class="col-12">
          <h1><%=recipe.label%></h1>
        </div>
        <div class="col-12">
          <button type="button" onclick="document.location='<%= recipe.url %>'" class="btn btn-dark">Go to website</button>
        </div>          
      </div>
      <div class = "row">
        <div class="col-sm-4">
          <h3>Ingredients</h3>
          <p><%= recipe.ingredients %></p>
        </div>
        <div class="col-sm-6">
          <div class="row">
            <div class="col-12">
              <h3>Yield</h3>
              <p><%= recipe.yield%></p>
            </div>
            <div class="col-12">
              <h3>Category</h3>
              <p><%= recipe.category%></p>
            </div>
            <div class="col-12">
              <h3>Caution</h3>
              <p><%= recipe.caution%></p>
            </div>
          </div>
        </div>
      </div>
    </div>


  </body>
</html>