<html>
  <head>
    <!-- meta tags -->
    <meta charset="utf8">
    <meta name="viewport" content = "width=device-width, initial-scale=1.0">
    <!-- bootstrap & css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="public/styles.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
      <a class="navbar-brand" style="margin-left:40px" href="/">Noodly noodle shop</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav nav">
          <li class="nav-item"><a class="nav-link" href="/">Categories</a></li>
          <li class="nav-item"><a class="nav-link" href="/recipes">Recipes</a></li>
        </ul>
      </div>
    </nav>
    <nav class="container">
      <nav class="row">
        <% const colLen = recipes.length / 3 %>
        <nav class= "col-md-4">
          <ul class="list-unstyled">
            <% for (let i =0; i < colLen; i += 1) { %>
              <li><a href="/recipe/<%= i %>"><%= recipes[i].label %></a></li>
            <% }%>
          </ul>
        </nav>
        <nav class= "col-md-4">
          <ul class="list-unstyled">
            <% for (let i = Math.floor(colLen + 1); i < colLen * 2; i += 1) { %>
              <li><a href="/recipe/<%= i %>"><%= recipes[i].label %></a></li>
            <% }%>
          </ul>
        </nav>
        <nav class= "col-md-4">
          <ul class="list-unstyled">
            <% for (let i =Math.floor(colLen * 2 + 1); i < recipes.length; i += 1) { %>
              <li><a href="/recipe/<%= i %>"><%= recipes[i].label %></a></li>
            <% }%>
          </ul>
        </nav>
      </nav>
    </nav>

  </body>
</html>